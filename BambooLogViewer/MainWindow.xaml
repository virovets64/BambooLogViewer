<Window x:Class="BambooLogViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:view="clr-namespace:BambooLogViewer.View"
        xmlns:data="clr-namespace:BambooLogViewer.DataModel"  
        Title="Bamboo Log Viewer" Height="350" Width="525">
  <Window.Resources>
    <view:MessageColorConverter x:Key="messageColorConverter"></view:MessageColorConverter>
    <BooleanToVisibilityConverter x:Key="BoolToVis" />
    <Style x:Key="errorLabelStyle">
      <Setter Property="Label.Background" Value="Red"/>
      <Setter Property="Label.BorderBrush" Value="Black"/>
      <Setter Property="Label.BorderThickness" Value="1"/>
      <Setter Property="Label.Padding" Value="1"/>
      <Setter Property="Label.Margin" Value="0,0,5,0"/>
      <Setter Property="Label.Content" Value="   "/>
    </Style>
    <Style x:Key="warningLabelStyle">
      <Setter Property="Label.Background" Value="Yellow"/>
      <Setter Property="Label.BorderBrush" Value="Black"/>
      <Setter Property="Label.BorderThickness" Value="1"/>
      <Setter Property="Label.Padding" Value="1"/>
      <Setter Property="Label.Margin" Value="0,0,5,0"/>
      <Setter Property="Label.Content" Value="   "/>
    </Style>
  </Window.Resources>
  <DockPanel>
    <DockPanel DockPanel.Dock="Top">
      <TabControl>
        <TabItem Header="From File">
          <DockPanel>
            <TextBlock Text="Log file path: " DockPanel.Dock="Left" Margin="4"/>
            <Button Name="btnOpen" DockPanel.Dock="Right" Margin="4" Click="btnOpen_Click">
              <TextBlock Text="Open"/>
            </Button>
            <TextBox Name="editPath" Margin="4"/>
          </DockPanel>
        </TabItem>
        <TabItem Header="From Clipboard">
          <Button Name="btnPaste" DockPanel.Dock="Right" Margin="4" Click="btnPaste_Click">
            <TextBlock Text="Paste"/>
          </Button>
        </TabItem>
      </TabControl>
    </DockPanel>
    <TreeView Name="trvLog">
      <TreeView.Resources>
        <HierarchicalDataTemplate DataType="{x:Type data:Build}" ItemsSource="{Binding Tasks}">
          <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
              <Label Style="{StaticResource errorLabelStyle}" Visibility="{Binding Path=Failed, Converter={StaticResource BoolToVis}}"/>
              <TextBlock Text="Build: " />
              <TextBlock Text="{Binding Id}" FontWeight="Bold"/>
              <TextBlock Text=" on " />
              <TextBlock Text="{Binding Agent}" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="{Binding Name}" />
            </StackPanel>
          </StackPanel>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type data:PlanTask}" ItemsSource="{Binding Records}">
          <StackPanel Orientation="Horizontal">
            <Label Style="{StaticResource errorLabelStyle}" Visibility="{Binding Path=Failed, Converter={StaticResource BoolToVis}}"/>
            <TextBlock Text="Task: " />
            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
            <TextBlock Text=" Result: " />
            <TextBlock Text="{Binding Result}" FontWeight="Bold"/>
          </StackPanel>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type data:VSProject}" ItemsSource="{Binding Records}">
          <StackPanel Orientation="Horizontal">
            <Label Style="{StaticResource errorLabelStyle}" Content="{Binding Errors}" Visibility="{Binding Path=HasErrors, Converter={StaticResource BoolToVis}}"/>
            <Label Style="{StaticResource warningLabelStyle}" Content="{Binding Warnings}" Visibility="{Binding Path=HasWarnings, Converter={StaticResource BoolToVis}}"/>
            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
          </StackPanel>
        </HierarchicalDataTemplate>
        <DataTemplate DataType="{x:Type data:Record}">
          <StackPanel Orientation="Horizontal">
            <Label Style="{StaticResource errorLabelStyle}" Visibility="{Binding Path=IsError, Converter={StaticResource BoolToVis}}"/>
            <Label Style="{StaticResource warningLabelStyle}" Visibility="{Binding Path=IsWarning, Converter={StaticResource BoolToVis}}"/>
            <TextBlock Text="{Binding Message}"/>
          </StackPanel>
        </DataTemplate>
      </TreeView.Resources>
    </TreeView>
  </DockPanel>

</Window>
